

<%= form_for @filmtemp do |f| %>
  <% @search = Tmdb::Search.new %>
  <% @search.resource('movie') %>
  <% @search.query(params[:search]) %>
  <% @results = @search.fetch %>

  <% @select_list = @results.collect {|movie| [ movie['title'] + " " + movie['release_date'][0..3], movie['title'] + "," + movie['release_date'] + "," + movie['id'].to_s ] } %>

  <%= select_tag "film_record", options_for_select(@select_list) %>

  <%= f.submit %>
<% end %>


