<%= link_to "Add Cinema", new_cinema_path %> <br>
<% if @cinemas.any? %>
  <% @cinemas.each do |cinema| %><br>
    <%= link_to cinema.name, cinema_path(cinema) %><br>
    <%= cinema.address%>, <%= cinema.postcode %><br>
    Phone: <%= cinema.phone %><br>
    Website: <%= cinema.website %><br>
    Screenings: <% cinema.screenings.all.each do |screening| %>
    <%= screening.film_id %>
   <% end %><br>
  <% end %>
<% end %>
